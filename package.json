{
  "name": "html-and-css-practice",
  "version": "1.0.0",
  "homepage": "",
  "repository": "",
  "author": "Roman Dmiterko",
  "license": "MIT",
  "scripts": {
    "postinstall": "cp tools/githooks/* .git/hooks || true",
    "format": "bash tools/format.sh",
    "clean": "rm -rf dist && mkdir dist",
    "clean-cache": "rm -rf .parcel-cache",
    "dev": "parcel *.html",
    "build": "parcel build *.html --public-url './'",
    "analyze": "yarn build *.html --public-url './'",
    "deploy": "yarn build && gh-pages -d dist"
  },
  "devDependencies": {
    "@babel/core": "^7.12.0",
    "@babel/plugin-proposal-pipeline-operator": "7.25.9",
    "@parcel/core": "2.13.2",
    "@parcel/reporter-bundle-analyzer": "2.13.2",
    "@parcel/resolver-default": "2.13.2",
    "@parcel/transformer-less": "2.13.2",
    "gh-pages": "6.2.0",
    "less": "4.2.1",
    "lint-staged": "15.2.10",
    "parcel": "2.13.2",
    "prettier": "3.4.1",
    "svgo": "3.3.2"
  },
  "browserslist": [
    "Chrome 131"
  ],
  "packageManager": "yarn@4.5.3",
  "dependencies": {
    "camelcase": "8.0.0"
  }
}
